<div class="row">
	<div class="col-xs-12 col-sm-6 col-md-8">
		<h1>Challenges#edit</h1>
		<p>Find me in app/views/challenges/edit.html.erb</p>

		<%= flash_message %>
		<%= challenge_errors %>

		<%= form_for [@challenge] , html: { role: "form" } do |f| %>
			<div class="form-group">
			<%= f.label :title %>
			<%= f.text_field :title %>
			</div>
			<div class="form-group">
			<%= f.label :description %><br>
			<%= f.text_area :description, size: "60x12" %>
			</div>
			<%= f.submit "Save", class: "btn btn-default" %>
			<%= link_to('Cancel', challenge_path(@challenge), class: "btn btn-default") %>
		<% end %>
	</div>
</div>


