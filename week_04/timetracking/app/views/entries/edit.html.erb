<% if @entry.errors.any? %>
	<ul>
	<% @entry.errors.full_messages.each do |error_msg| %>
		<li><%= error_msg %></li>
	<% end %>
</ul>
<% end %>

<%= flash_message %>

<%= form_for [@project, @entry] do |f| %>
	<%= f.label :hours %>
	<%= f.text_field :hours %><br>
	<%= f.label :minutes %>
	<%= f.text_field :minutes %><br>
	<%= f.label :comment %>
	<%= f.text_area :comment, size: "60x12" %><br>
	<%= f.label :date %>
	<%= f.text_field :date %><br>
	<%= f.submit "Save" %>
<% end %>

<%= link_to("Cancel", project_entries_path(@project)) %>